{
  "name": "git-worktree",
  "displayName": "Git Worktree",
  "description": "Manage git worktree's with ease",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:git-worktree.list"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Git Worktree",
        "command": "git-worktree.list",
        "title": "List"
      }
    ],
    "configuration": [
      {
        "id": "wt-general-settings",
        "title": "General Settings",
        "properties": {
          "gitWorktree.window.openNewWindow": {
            "type": "boolean",
            "default": false,
            "description": "Open new vscode window when you switch or create a worktree"
          },
          "gitWorktree.push.automatically": {
            "type": "string",
            "default": "No",
            "enum": [
              "No",
              "Yes",
              "Ask"
            ],
            "enumDescriptions": [
              "Do not automatically push created branches",
              "Automatically push created branches to remote",
              "Ask to push to remote when creating branches"
            ]
          }
        }
      },
      {
        "id": "wt-add-settings",
        "title": "Add Settings",
        "properties": {
          "gitWorktree.add.includeRemote": {
            "type": "boolean",
            "default": false,
            "description": "Should include remote branches when adding new worktree"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "ts-loader": "^9.4.1",
    "tsc-files": "^1.1.3",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
